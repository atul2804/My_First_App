<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.atul.basic.Main2Activity" >

  <!--  <include
        android:id="@+id/toolbar2"
        layout="@layout/toolbar" /> -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dravid3"
        android:id="@+id/image"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText_name"
        android:layout_alignEnd="@+id/editText_name"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_marks"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/editText_surname"
        android:layout_alignStart="@+id/editText_surname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_name"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/editText_surname"
        android:layout_alignStart="@+id/editText_surname" />

    <TextView
        android:text="Name : "
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/textView"
        android:textAllCaps="true"
        android:textColor="@color/color1"
        android:textSize="20dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="AGE : "
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textView3"
        android:textAllCaps="true"
        android:textColor="@color/color1"
        android:textSize="20dp"
        android:layout_below="@+id/editText_surname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:text="SUBMIT"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/button"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:elevation="0dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image" />

    <TextView
        android:text="Surname : "
        android:layout_height="30dp"
        android:id="@+id/textView2"
        android:textAllCaps="true"
        android:textColor="@color/color1"
        android:textSize="20dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/editText_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="150dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_surname"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

    </LinearLayout>
